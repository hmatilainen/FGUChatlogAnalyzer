{% extends 'base.html.twig' %}

{% block title %}Confirm Logout - Fantasy Grounds Chatlog Analyzer{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Confirm Logout</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5 class="alert-heading"><i class="fas fa-exclamation-circle me-2"></i>Warning</h5>
                        <p class="mb-0">This action will permanently delete all your uploaded chatlog files. This cannot be undone.</p>
                    </div>
                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_home') }}" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                        <a href="{{ path('app_logout_logged_out') }}" class="btn btn-danger">
                            <i class="fas fa-check me-2"></i>Confirm
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 