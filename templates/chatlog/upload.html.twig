{% extends 'base.html.twig' %}

{% block title %}Upload Chatlog - Fantasy Grounds Chatlog Analyzer{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0"><i class="fas fa-upload me-2"></i>Upload Fantasy Grounds Chatlog</h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-file-upload fa-4x text-primary mb-3"></i>
                        <h5>Upload your Fantasy Grounds chatlog.html file</h5>
                        <p class="text-muted">The file will be analyzed for dice roll statistics and other relevant information.</p>
                    </div>

                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        <div class="mb-4">
                            {{ form_label(form.chatlog, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.chatlog, {'attr': {'class': 'form-control'}}) }}
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Maximum file size: 1MB. Supported formats: HTML files.
                            </div>
                            {{ form_errors(form.chatlog) }}
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-upload me-2"></i>Upload and Analyze
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>How to find your chatlog file</h5>
                </div>
                <div class="card-body">
                    <ol class="mb-0">
                        <li>Open Fantasy Grounds</li>
                        <li>Go to the <strong>Chat</strong> window</li>
                        <li>Click on the <strong>Menu</strong> button (three dots)</li>
                        <li>Select <strong>Save Chat Log</strong></li>
                        <li>Choose a location to save the file</li>
                        <li>Upload the saved <code>chatlog.html</code> file here</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 