{% extends 'base.html.twig' %}

{% block title %}Uploaded Chatlogs - Fantasy Grounds Chatlog Analyzer{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fas fa-list me-2"></i>Uploaded Chatlogs</h4>
                    <a href="{{ path('app_upload') }}" class="btn btn-primary">
                        <i class="fas fa-upload me-2"></i>Upload New Chatlog
                    </a>
                </div>
                <div class="card-body">
                    {% if files is empty %}
                        <div class="text-center py-5">
                            <i class="fas fa-folder-open fa-4x text-muted mb-3"></i>
                            <h5>No chatlogs uploaded yet</h5>
                            <p class="text-muted">Upload your first Fantasy Grounds chatlog to get started.</p>
                            <a href="{{ path('app_upload') }}" class="btn btn-primary">
                                <i class="fas fa-upload me-2"></i>Upload Chatlog
                            </a>
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Filename</th>
                                        <th>Upload Date</th>
                                        <th>Size</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for file in files %}
                                        <tr>
                                            <td>
                                                <a href="{{ path('app_chatlog_analyze', {'filename': file.name}) }}">
                                                    {{ file.name }}
                                                </a>
                                            </td>
                                            <td>{{ file.modified|date('Y-m-d H:i:s') }}</td>
                                            <td>{{ (file.size / 1024)|number_format(1) }} KB</td>
                                            <td>
                                                <a href="{{ path('app_chatlog_analyze', {'filename': file.name}) }}" 
                                                   class="btn btn-sm btn-primary">
                                                    <i class="fas fa-chart-bar me-1"></i>Analyze
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %} 