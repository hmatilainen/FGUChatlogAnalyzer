{% extends 'base.html.twig' %}

{% block title %}Analyze Chatlog - Fantasy Grounds Chatlog Analyzer{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $("#characterSearch").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#characterTable tbody tr").filter(function() {
                    var characterName = $(this).find("td:first").text().toLowerCase();
                    $(this).toggle(characterName.indexOf(value) > -1);
                });
            });
        });
    </script>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mb-4">
            <div class="col">
                <h2>Chatlog Analysis</h2>
                <p class="text-muted">
                    <i class="fas fa-file-alt me-2"></i>{{ filename }}
                    <span class="ms-3">
                        <i class="fas fa-clock me-1"></i>Last modified: {{ modified|date('Y-m-d H:i:s') }}
                    </span>
                </p>
            </div>
        </div>

        {# Debug Information #}
        <div class="row mb-4">
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-bug me-2"></i>Debug Information</h5>
                    </div>
                    <div class="card-body">
                        <pre class="mb-0" style="max-height: 300px; overflow-y: auto;">
{% for line in analysis.debug %}
{{ line }}
{% endfor %}
                        </pre>
                    </div>
                </div>
            </div>
        </div>

        {# Overall Statistics #}
        <div class="row mb-4">
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Overall Statistics</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h6 class="card-title">Total Rolls</h6>
                                        <h3 class="mb-0">{{ analysis.totals.rolls }}</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h6 class="card-title">Average Roll</h6>
                                        <h3 class="mb-0">{{ analysis.totals.average }}</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h6 class="card-title">Characters</h6>
                                        <h3 class="mb-0">{{ analysis.totals.characters|length }}</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Character Statistics #}
        <div class="row mb-4">
            <div class="col">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-users me-2"></i>Character Statistics</h5>
                        <div class="input-group" style="width: 300px;">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                            <input type="text" id="characterSearch" class="form-control" placeholder="Search characters...">
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped" id="characterTable">
                                <thead>
                                    <tr>
                                        <th>Character</th>
                                        <th>Total Rolls</th>
                                        <th>Average Roll</th>
                                        <th>Roll Types</th>
                                        <th>Skills Used</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for charName, charData in analysis.totals.characters %}
                                        <tr>
                                            <td><a href="{{ path('app_chatlog_character', {'filename': filename, 'character': charName}) }}">{{ charName }}</a></td>
                                            <td>{{ charData.rolls }}</td>
                                            <td>{{ charData.average }}</td>
                                            <td>
                                                {% for type, count in charData.roll_types %}
                                                    <span class="badge bg-primary me-1">{{ type }}: {{ count }}</span>
                                                {% endfor %}
                                            </td>
                                            <td>
                                                {% for skill, count in charData.skills %}
                                                    <span class="badge bg-info me-1">{{ skill }}: {{ count }}</span>
                                                {% endfor %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Session Details #}
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Session Details</h5>
                    </div>
                    <div class="card-body">
                        {% for session in analysis.sessions %}
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h6 class="mb-0">
                                        Session: {{ session.date }} at {{ session.time }}
                                        <span class="badge bg-secondary ms-2">
                                            {{ session.total_rolls }} rolls (avg: {{ session.average }})
                                        </span>
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Character</th>
                                                    <th>Rolls</th>
                                                    <th>Average</th>
                                                    <th>Roll Types</th>
                                                    <th>Skills Used</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for character, data in session.characters %}
                                                    <tr>
                                                        <td><a href="{{ path('app_chatlog_character', {'filename': filename, 'character': character}) }}">{{ character }}</a></td>
                                                        <td>{{ data.rolls }}</td>
                                                        <td>{{ data.average }}</td>
                                                        <td>
                                                            {% for type, count in data.roll_types %}
                                                                <span class="badge bg-primary me-1">{{ type }}: {{ count }}</span>
                                                            {% endfor %}
                                                        </td>
                                                        <td>
                                                            {% for skill, count in data.skills %}
                                                                <span class="badge bg-info me-1">{{ skill }}: {{ count }}</span>
                                                            {% endfor %}
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 