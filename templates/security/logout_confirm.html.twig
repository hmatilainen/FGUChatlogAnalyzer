{% extends 'base.html.twig' %}

{% block title %}Confirm Logout - Fantasy Grounds Chatlog Analyzer{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0"><i class="fas fa-sign-out-alt me-2"></i>Confirm Logout</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Warning!</h5>
                        <p>By logging out, all your uploaded chatlog files will be permanently deleted. This action cannot be undone.</p>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_home') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Cancel
                        </a>
                        <a href="{{ path('app_logout') }}" class="btn btn-danger">
                            <i class="fas fa-sign-out-alt me-2"></i>Logout and Delete Files
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 